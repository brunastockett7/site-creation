<section class="info-block">
  <h2><%= title %></h2>

  <% if (!items || !items.length) { %>
    <p>No inventory found for this classification.</p>
  <% } else { %>
    <ul style="list-style:none;padding:0;margin:0;display:grid;gap:1rem">
      <% items.forEach(it => { %>
        <li class="info-block" style="background:#fff">
          <!-- If you later add an image column in DB, render it here -->
          <!-- <img src="<%= it.photo_url %>" alt="<%= `${it.inv_year} ${it.inv_make} ${it.inv_model}` %>" style="border-radius:8px;margin-bottom:.75rem" /> -->

          <h3 style="margin:.25rem 0">
            <%= it.inv_year %> <%= it.inv_make %> <%= it.inv_model %>
          </h3>
          <p>
            <!-- Add more fields like mileage/features once your DB has them -->
          </p>
          <strong>$<%= Number(it.inv_price).toLocaleString() %></strong>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>
