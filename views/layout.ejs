<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title ?? pageTitle ?? 'CSE Motors' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="<%= description ?? 'CSE Motors dealership site' %>">
  <link rel="stylesheet" href="/styles.css">
  <!-- Client-side validation (optional) -->
  <script src="/form.js" defer></script>
</head>
<body>
  <!-- Skip link for keyboard users -->
  <a href="#main" class="skip-link">Skip to main content</a>

  <header class="site-header" role="banner">
    <h1 class="brand"><a href="/">CSE Motors</a></h1>

    <!-- Navigation (dynamic) -->
    <nav class="main-nav" aria-label="Primary">
      <%- include('partials/header') %>
    </nav>
  </header>

  <!-- Main content + live region for flash messages -->
  <main id="main" class="container" role="main" aria-live="polite">
    <!-- Flash / Session messages -->
    <% if (success_message) { %>
      <p class="notice success" role="status"><%= success_message %></p>
    <% } %>

    <% if (error_message) { %>
      <!-- alerts should use role="alert" -->
      <p class="notice error" role="alert"><%= error_message %></p>
    <% } %>

    <!-- View content -->
    <%- body %>
  </main>

  <footer class="site-footer" role="contentinfo">
    <p>&copy; <%= new Date().getFullYear() %> CSE Motors</p>
  </footer>
</body>
</html>
