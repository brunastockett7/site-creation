<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>
    <%= typeof title !== 'undefined'
          ? title
          : (typeof pageTitle !== 'undefined' ? pageTitle : 'CSE Motors') %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
  <!-- ✅ JS for client-side validation (Frontend Checklist) -->
  <script src="/form.js" defer></script>
</head>
<body>
  <header class="site-header">
    <!-- Brand -->
    <h1 class="brand"><a href="/">CSE Motors</a></h1>

    <!-- ✅ Navigation (dynamic) -->
    <nav class="main-nav">
      <%- include('partials/header') %>
    </nav>
  </header>

  <main class="container">
    <!-- ✅ Flash / Session messages -->
    <% if (success_message) { %>
      <p class="notice success" role="status"><%= success_message %></p>
    <% } %>
    <% if (error_message) { %>
      <p class="notice error" role="status"><%= error_message %></p>
    <% } %>

    <!-- ✅ Render the main content -->
    <%- body %>
  </main>

  <footer class="site-footer">
    <p>&copy; <%= new Date().getFullYear() %> CSE Motors</p>
  </footer>
</body>
</html>
