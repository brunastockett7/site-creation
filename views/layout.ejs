<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title || 'CSE Motors' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="site-header">
    <!-- Brand on top -->
    <h1 class="brand"><a href="/">CSE Motors</a></h1>

    <!-- Navigation (static include instead of raw nav dump) -->
    <nav class="main-nav">
      <%- include('partials/nav') %>
    </nav>
  </header>

  <main class="container">
    <!-- This is where each child view (inventory.ejs, detail.ejs, error.ejs) will render -->
    <%- body %>
  </main>
<footer class="site-footer">
  <p>&copy; <%= new Date().getFullYear() %> CSE Motors</p>
</footer>
</body>
</html>

