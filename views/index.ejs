<!doctype html>
<html lang="en">
  <%- include('partials/head', { title, description }) %>
  <body>
    <%- include('partials/header') %>

    <main id="main" class="container">
      <!-- HERO SLIDER -->
      <section class="hero-slider" aria-label="Featured vehicles">
        <div class="slides" id="slides">
          <!-- Use the images you already have in /public/images -->
          <div class="slide">
            <img src="/images/hero.webp" alt="Showroom hero vehicle">
          </div>
          <div class="slide">
            <img src="/images/suv.webp" alt="SUV models in lineup">
          </div>
          <div class="slide">
            <img src="/images/sedan.webp" alt="Sedan models in lineup">
          </div>
          <div class="slide">
            <img src="/images/truck.webp" alt="Truck models in lineup">
          </div>
        </div>
        <!-- pagination dots (no buttons) -->
        <div class="dots" id="dots" aria-hidden="true"></div>
      </section>

      <!-- FEATURES / CATEGORIES (kept as before) -->
      <section id="inventory" class="features" aria-labelledby="inv-heading">
        <h2 id="inv-heading" class="section-title">Popular categories</h2>
        <div class="grid">
          <article class="card">
            <img src="/images/suv.webp" alt="Family SUV">
            <h3>SUVs</h3>
            <p>Roomy, safe, and road-trip ready.</p>
            <a class="link" href="#">Shop SUVs →</a>
          </article>

          <article class="card">
            <img src="/images/sedan.webp" alt="Fuel-efficient sedan">
            <h3>Sedans</h3>
            <p>Compact, stylish, and efficient.</p>
            <a class="link" href="#">Shop Sedans →</a>
          </article>

          <article class="card">
            <img src="/images/truck.webp" alt="Pickup truck">
            <h3>Trucks</h3>
            <p>Strong, durable, and built for work.</p>
            <a class="link" href="#">Shop Trucks →</a>
          </article>
        </div>
      </section>

      <section id="finance" class="cta">
        <div class="cta-inner">
          <h2 class="section-title">No-pressure test drives</h2>
          <p class="lead">Schedule online—be in and out in 30 minutes.</p>
          <a class="btn" href="#">Book now</a>
        </div>
      </section>

      <div id="service"></div>
    </main>

    <%- include('partials/footer') %>
    <script src="/js/main.js" defer></script>
  </body>
</html>
