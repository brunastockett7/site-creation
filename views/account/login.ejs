<main class="container narrow">
  <h1>Login to Your Account</h1>
  <p class="lead">Access your account to manage vehicles, update info, or view your dashboard.</p>

  <% if (error_message) { %>
    <div class="flash error" role="alert"><%= error_message %></div>
  <% } %>

  <form method="POST" action="/auth/login" novalidate>
    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      value="<%= values?.email || '' %>"
      autocomplete="email"
    >

    <label for="password">Password:</label>
    <input
      type="password"
      id="password"
      name="password"
      required
      autocomplete="current-password"
    >

    <button type="submit" class="btn">Login</button>
  </form>

  <p class="muted">Don't have an account? <a href="/auth/register">Register here</a>.</p>
</main>
