<header class="site-header simple">
  <div class="container header-stack">
    <h1 class="brand"><a href="/">CSE Motors</a></h1>

    <nav class="primary-actions" aria-label="Primary">
      <!-- Static links (always visible) -->
      <a class="pill" href="/finance">Financing</a>
      <a class="pill" href="/service">Service</a>
      <a class="pill" href="/inventory">Inventory</a>

      <!-- ✅ Dynamic account links based on login state -->
      <% if (typeof user !== 'undefined' && user) { %>
        <a class="pill" href="/account/manage">Account</a>
        <a class="pill" href="/account/update">Update</a>
        <a class="pill" href="/account/favorites">Favorites</a> <!-- ← add this line -->

      <!-- ✅ Logout form -->
        <form action="/auth/logout" method="post" style="display:inline">
        <button class="pill" type="submit">Logout</button>
        </form>
      <% } else { %>
        <a class="pill" href="/auth/login">Login</a>
      <% } %>

       <!-- Optional role example (null-safe) -->
      <% if (user && (user.role === 'Admin' || user.role === 'Employee')) { %>
        <a class="pill" href="/inventory/management">Admin</a>
      <% } %>
    </nav>
  </div>
</header>
